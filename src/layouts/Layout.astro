---
import Sidebar from "../components/Sidebar";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='bg-white flex lg:flex-row-reverse flex-col overflow-hidden'>
    <Sidebar title={title} client:load />
    <div class='p-2 lg:p-4 w-full h-[96.3vh] lg:h-screen ml-auto'>
      <div
        class='w-full h-[100%] p-2 border border-black rounded overflow-y-scroll animate-moveup'
      >
        <slot />
      </div>
    </div>
  </body>
</html>
