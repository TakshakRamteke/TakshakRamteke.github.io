---
import Layout from "../../layouts/Layout.astro";
interface Frontmatter {
  title: string;
  description: string;
  cover: string;
  author: string;
  date: string;
}

const projects = await Astro.glob<Frontmatter>("./*.md");
---

<Layout title="Projects">
  <h1 class="font-inter text-2xl font-bold uppercase">Product's im proud of</h1>
  <div class="mt-4 grid place-items-center lg:flex lg:place-items-stretch">
    {
      projects.map((project) => (
        <div class="m-1 mb-3 max-w-[20rem] rounded border border-black p-2 lg:mr-2">
          {project.frontmatter.cover && <img src={project.frontmatter.cover} />}
          <a href={project.url}>
            <h1 class="text-lg font-semibold hover:text-purple-800 hover:underline">
              {project.frontmatter.title}
            </h1>
          </a>
          <span class="text-md italic">{`"${project.frontmatter.description}"`}</span>
          <div class="flex items-center">
            <p class="text-right text-sm italic text-gray-600 ">
              By : {project.frontmatter.author}
            </p>
            <p class="ml-auto text-right text-sm italic text-gray-600">
              {project.frontmatter.date}
            </p>
          </div>
        </div>
      ))
    }
  </div>
</Layout>
